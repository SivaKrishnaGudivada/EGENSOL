FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build-env
WORKDIR /app

RUN apt-get update
RUN apt-get install -y netcat
RUN apt-get install -y nano
RUN apt-get install iputils-ping
RUN apt-get install net-tools


COPY bulk-order-api/*.csproj ./bulk-order-api/
COPY Common/*.csproj ./Common/

COPY *.csproj ./
RUN dotnet restore ./bulk-order-api/bulk-order-api.csproj

COPY . ./
RUN dotnet publish -c Release -o out ./bulk-order-api/bulk-order-api.csproj

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "bulk-order-api.dll"]